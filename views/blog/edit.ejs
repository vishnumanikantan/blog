<% include ../partials/header %>
    <h1 class="display-4">Edit <%=blog.title%></h1>
    <div class="container">
        <form action="/<%=blog._id%>/?_method=PUT" method="POST">
          <div class="form-group">
            <label for="title">Post title/heading *</label>
            <input type="text" class="form-control" id="title" aria-describedby="emailHelp" placeholder="Post title/heading" name="blog[title]" value="<%=blog.title%>" required>
          </div>
          <div class="form-group">
            <label for="byline">By-line</label>
            <input type="text" class="form-control" id="byline" name="blog[byline]" placeholder="A short by-line" value="<%=blog.byline%>">
          </div>
          <div class="form-group">
            <label for="image">Post Image</label>
            <input type="text" class="form-control" id="image" name="blog[image]" value="<%=blog.image%>" placeholder="Image URL" required>
          </div>
          <div class="form-group">
              <label for="content">Post Content *</label>
              <textarea class="form-control" id="content" rows="20" name="blog[content]" placeholder="Post content...." required><%=blog.content%></textarea>
          </div>
          <button type="submit" class="btn btn-outline-success btn-lg mb-3">Post</button>
        </form>
        <a href="/" class="btn btn-outline-primary">Go Back</a>
    </div>
<% include ../partials/footer %>